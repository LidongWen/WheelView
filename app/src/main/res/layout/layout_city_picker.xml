<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <com.wenld.wheel.WheelView
        android:id="@+id/province_wv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="#009688"
        app:lineHeight="0.5dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="14sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"
        />

    <com.wenld.wheel.WheelView
        android:id="@+id/city_wv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="#009688"
        app:lineHeight="0.5dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="14sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"
        />

</LinearLayout>